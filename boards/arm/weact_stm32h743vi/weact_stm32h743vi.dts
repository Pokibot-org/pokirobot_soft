/dts-v1/;
#include <st/h7/stm32h743Xi.dtsi>
#include <st/h7/stm32h743vitx-pinctrl.dtsi>

/ {
	model = "WeAct stm32h743vi board";
	compatible = "st,weact_stm32h743vi";

	chosen {
		zephyr,console = &usart3;
		zephyr,shell-uart = &usart3;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,dtcm = &dtcm;
	};

	leds {
		compatible = "gpio-leds";
		blue_led: led_0 {
			gpios = <&gpioe 3 GPIO_ACTIVE_HIGH>;
			label = "User LD1";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		green_pwm_led: green_pwm_led {
			pwms = <&pwm3 1 0 PWM_POLARITY_NORMAL>;
			label = "Green PWM LED";
			status = "okay";
		};
		blue_pwm_led: blue_pwm_led {
			pwms = <&pwm3 2 0 PWM_POLARITY_NORMAL>;
			label = "Blue PWM LED";
			status = "okay";
		};
		red_pwm_led: red_pwm_led {
			pwms = <&pwm3 3 0 PWM_POLARITY_NORMAL>;
			label = "Red PWM LED";
			status = "okay";
		};
        servo_0: servo_0 {
            pwms = <&pwm2 1 0 PWM_POLARITY_NORMAL>;
            label = "Servo 0";
            status = "okay";
        };
        servo_1: servo_1 {
			pwms = <&pwm2 2 0 PWM_POLARITY_NORMAL>;
			label = "Servo 1";
			status = "okay";
		};
        servo_2: servo_2 {
			pwms = <&pwm2 3 0 PWM_POLARITY_NORMAL>;
			label = "Servo 2";
			status = "okay";
		};
		servo_3: servo_3 {
			pwms = <&pwm2 4 0 PWM_POLARITY_NORMAL>;
			label = "Servo 3";
			status = "okay";
		};
	};


    gpio_keys {
		user_button: button_user {
			label = "User";
			gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
		};
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpioa 7 GPIO_ACTIVE_HIGH>;
            label = "sw cote";
        };
        button1: button_1 {
            gpios = <&gpioa 5 GPIO_ACTIVE_HIGH>;
            label = "sw robot";
        };
        button2: button_2 {
            gpios = <&gpioa 6 GPIO_ACTIVE_HIGH>;
            label = "tirette";
        };
        button3: button_3 {
            gpios = <&gpioa 3 GPIO_ACTIVE_HIGH>;
            label = "tirette";
        };
        button4: button_4 {
            gpios = <&gpioc 4 GPIO_ACTIVE_HIGH>;
            label = "tirette";
        };
        button5: button_5 {
            gpios = <&gpiob 1 GPIO_ACTIVE_HIGH>;
            label = "tirette";
        };
    };

	aliases {
		led0 = &blue_led;
		sw0 = &user_button;
		camsense-uart = &usart2;
		stepper-bus = &uart5;
		red-pwm-led = &red_pwm_led;
		green-pwm-led = &green_pwm_led;
		blue-pwm-led = &blue_pwm_led;
		sw-cote = &button0;
        sw-robot = &button1;
        sw-tirette = &button2;
        sw-pump = &button3;
        sw-valve = &button4;
        sw-electromagnet = &button5;
		servo-orientation = &servo_0;
        servo-arm = &servo_1;
        servo-dicristaline1 = &servo_2;
        servo-dicristaline2 = &servo_3;
	};
};

&timers2 {
    st,prescaler = <10000>;
    status = "okay";

	pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim2_ch1_pa15 &tim2_ch2_pb3 &tim2_ch3_pb10 &tim2_ch4_pb11>;
		pinctrl-names = "default";
	};
};

&timers3 {
	st,prescaler = <10000>;
	status = "okay";

	pwm3: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch1_pb4 &tim3_ch2_pb5 &tim3_ch4_pc9>;
		pinctrl-names = "default";
	};
};


&clk_hse {
	clock-frequency = <DT_FREQ_M(25)>;
	status = "okay";
};

&clk_lse {
	status = "okay";
};

&pll {
	div-m = <5>;
	mul-n = <192>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(480)>;
	d1cpre = <1>;
	hpre = <2>;
	d1ppre = <2>;
	d2ppre1 = <2>;
	d2ppre2 = <2>;
	d3ppre = <2>;
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};


&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&uart5 {
    status = "okay";
    current-speed = < 115200 >;
    pinctrl-0 = < &uart5_rx_pd2 &uart5_tx_pc12 >;
    pinctrl-names = "default";
    single-wire;
};

&rtc {
	status = "okay";
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb9>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&adc1 {
	pinctrl-0 = <&adc1_inp15_pa3>;
	pinctrl-names = "default";
	status = "okay";
};

&rng {
	status = "okay";
};

&spi1 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_sck_pa5 &spi1_miso_pa6 &spi1_mosi_pb5>;
};
