{
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.tabSize": 4,
    "cSpell.language": "en",
    "cSpell.enabled": true,
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "cmath": "c",
        "complex": "c"
    },
    "C_Cpp.errorSquiggles": "disabled",
    "clangd.arguments": [
        "-compile-commands-dir=${workspaceFolder}/build", 
        "--header-insertion=never"
    ],
}